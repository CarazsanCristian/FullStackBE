{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "es2021",
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
